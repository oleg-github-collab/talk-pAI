{
  "name": "talk-pai",
  "version": "2.0.0",
  "description": "Talk pAI - Enterprise AI-Powered Messenger with advanced search, real-time collaboration, and comprehensive logging",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Build completed - Ready for Railway deployment'",
    "railway:start": "node server.js",
    "validate": "node scripts/deployment-validator.js pre-deployment",
    "validate:runtime": "node scripts/deployment-validator.js runtime",
    "validate:full": "node scripts/deployment-validator.js full",
    "logs": "tail -f logs/talkpai.log",
    "logs:error": "tail -f logs/talkpai-error.log",
    "health": "curl -f http://localhost:${PORT:-3000}/health || echo 'Health check failed'"
  },
  "keywords": [
    "messenger",
    "chat",
    "ai",
    "ai-assistant",
    "realtime",
    "postgresql",
    "enterprise",
    "teams",
    "workspaces",
    "search",
    "mobile",
    "responsive",
    "production"
  ],
  "author": "Talk pAI Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "nodemailer": "^7.0.6",
    "openai": "^4.28.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-microsoft": "^2.1.0",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "rss-parser": "^3.13.0",
    "socket.io": "^4.6.1",
    "speakeasy": "^2.0.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/talk-pai.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/talk-pai/issues"
  },
  "homepage": "https://github.com/your-username/talk-pai#readme"
